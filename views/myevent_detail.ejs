<%- include layouts/header.ejs %>

<div id="pages_maincontent" style="background-color: white">

    <a href="/myevents" class="backto"><img src="/../images/icons/black/back.png" alt="" title="" /></a>
    <% if(events.length==0){%>
    <h2 class="blog_title">Not found</h2>
    <%}else{%>
    <h2 class="blog_title"><%=events[0].name%></h2>

    <!-- Slider -->
    <div class="swiper-container-pages swiper-init" data-effect="slide" data-pagination=".swiper-pagination">
        <div class="swiper-wrapper">

            <div class="swiper-slide">
                <img src="/../images/page_photo.jpg" alt="" title="" />
            </div>
            <div class="swiper-slide">
                <img src="/../images/page_photo2.jpg" alt="" title="" />
            </div>
            <div class="swiper-slide">
                <img src="/../images/page_photo3.jpg" alt="" title="" />
            </div>

        </div>
        <div class="swiper-pagination"></div>
    </div>
    <div class="page_single layout_fullwidth_padding">
        <div class="post_single">
            <p>
                <%=events[0].description%>
            </p>
            </br><span><i class="fa fa-user w3-margin-right"></i>&nbsp&nbsp&nbspAuthor&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: <a href="#"><%=events[0].event_owner%></a></span>
            </br><span><i class="fa fa-play w3-margin-right"></i>&nbsp&nbspOpen Time&nbsp&nbsp&nbsp&nbsp: <%=(events[0].open_time).toLocaleString()%></span>
            </br><span><i class="fa fa-stop w3-margin-right"></i>&nbsp&nbspClosed Time&nbsp: <%=(events[0].closed_time).toLocaleString()%></span>
            </br><span><i class="fa fa-money w3-margin-right"></i>&nbsp&nbspReward&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: <%=(events[0].reward)%> (points)</span>
            </br><span><i class="fa fa-heart w3-margin-right"></i>&nbsp&nbspInterested&nbsp&nbsp&nbsp&nbsp&nbsp: <%=(events[0].participants_interested_count)%></span>
            </br><span><i class="fa fa-users w3-margin-right"></i>&nbsp&nbspJoined&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: <%=(events[0].participants_joined_count)%></span>
        </div>
        <a href="#" data-popup=".popup-social" class="button_full btmint open-popup">SHARE THIS EVENT</a>

        <!--<div class="buttons-row">-->
        <!--<a href="#tab1" class="tab-link active button">Leave a comment</a>-->
        <!--<a href="#tab2" class="tab-link button">Comments</a>-->
        <!--</div>-->
        <ul class="comments">
            <li class="comment_row">
                <div class="comm_avatar"><img src="/../images/icons/black/user.png" alt="" title="" border="0" /><a href="#" style="font-size: 10px">John Doe 1</a></div>
                <div class="comm_content"><p>Reserved, good luck team</p></div>
            </li>
            <li class="comment_row">
                <div class="comm_avatar"><img src="/../images/icons/black/user.png" alt="" title="" border="0" /><a href="#" style="font-size: 10px">John Doe 2</a></div>
                <div class="comm_content"><p>Interested, will joined it</p></div>
            </li>
            <li class="comment_row">
                <div class="comm_avatar"><img src="/../images/icons/black/user.png" alt="" title="" border="0" /><a href="#" style="font-size: 10px">John Doe 3</a></div>
                <div class="comm_content"><p>Sound good, hungry to join it now</p></div>
            </li>
            <div class="clear"></div>
        </ul>
        <div class="contactform">
            <form id="CommentForm" method="post" action="/event_detail/comment">
                <% if (user!= null) { %>
                <input type="text" hidden name="CommentEmail" id="CommentEmail" value="<%= user.username %>" class="form_input" />
                <label>Comment:</label>
                <textarea name="Comment" id="Comment" class="form_textarea" rows="" cols=""></textarea>
                <input type="submit" name="submit" class="form_submit" id="submit" value="Submit" />
                <% } else { %>
                <div class="signup_bottom">
                    <p>Login to comment</p>
                    <a href="/login" data-view=".view-main"><span>LOGIN</span></a>
                </div>
                <% } %>
            </form>

        </div>


    </div>
    <% } %>
</div>

<%- include layouts/footer.ejs %>
