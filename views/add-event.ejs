<%- include layouts/header.ejs %>


<div id="pages_maincontent" style="background-color: white">

    <h2 class="page_title">CREATE NEW EVENT</h2>

    <div class="page_single layout_fullwidth_padding">

        <div class="contactform">
            <form class="" id="CustomForm" method="post" action="/myevents/add" >
                <input hidden type="text" name="event_owner" value="<%= user.username %>" class="form_input" />
                <div class="form_row">
                    <label>Event Name:</label>
                    <input type="text" name="name" value="TEST" class="form_input" />
                </div>

                <div class="form_row custom_select">
                    <a href="#" class="item-link smart-select" data-open-in="picker">
                        <div class="item-content">
                            <div class="item-inner">
                                <label>Event Category</label>
                                <div class="item-after">Select one</div>
                            </div>
                        </div>
                        <select name="category">
                            <option value="0" >Select one</option>
                            <option value="IT" selected>IT</option>
                            <option value="Security">Security</option>
                            <option value="Soft Skill">Soft Skill</option>
                            <option value="Marketing">Marketing</option>
                            <option value="Technology">Technology</option>
                        </select>
                    </a>
                </div>

                <div class="form_row">
                    <label>Speakers:</label>
                    <textarea name="speaker" class="form_textarea" rows="" cols="" >haison</textarea>
                </div>

                <div class="form_row">
                    <label>Description:</label>
                    <textarea name="description" class="form_textarea" rows="" cols=""></textarea>
                </div>

                <div class="form_row">
                    <label>Reward:</label>
                    <input type="text" name="reward" value="10" class="form_input" />
                </div>

                <div class="form_row">
                    <label>Location:</label>
                    <input type="text" name="location" value="" class="form_input" />
                </div>


                <div class="form_row">
                    <label>From:</label>
                    <input type="date" style="font-size: 14px; width: 100%" name="open_date" class="form_input required" value="" required >
                    <input type="time" style="font-size: 14px; width: 100%" name="open_time" class="form_input required" value="" required >
                    <!--<input type="text" name="email" value="" class="form_input required" readonly="readonly" id="calendar-input" />-->
                    <label>To:</label>
                    <input type="date" style="font-size: 14px; width: 100%" name="closed_date" class="form_input required" value="" required >
                    <input type="time" style="font-size: 14px; width: 100%" name="closed_time" class="form_input required" value="" required >
                </div>

                <div class="form_row">
                    <label>Noted:</label>
                    <textarea name="noted" class="form_textarea" rows="" cols=""></textarea>
                </div>


                <input type="submit" name="submit" class="form_submit" id="submit" value="Create" />
            </form>
        </div>
    </div>

</div>

<%- include layouts/footer.ejs %>
